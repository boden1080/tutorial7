#include <iostream>
using namespace std;
int  shapeSize;
int main()	//produceASquareShape
{
	int i = 0;
	void drawALine();	//prototype
	
	cout << "enter a number";
	cin >> shapeSize;
	
	while (i < shapeSize) {
		drawALine();
		cout << endl;
		++i;
	}
	
	cout << "\n\n";
	system("pause");	//to hold the output screen
	return 0;
}
void drawALine() {
	int lc = 0;
	while (lc < shapeSize)
	{
		cout << '*';
		
			
		++lc;
	}
}
